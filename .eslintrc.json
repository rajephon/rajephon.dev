{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "ignorePatterns": ["specs/**/*", ".next/**/*", "out/**/*", "node_modules/**/*"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": false
    }],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "globals": {
    "gtag": "readonly"
  }
}